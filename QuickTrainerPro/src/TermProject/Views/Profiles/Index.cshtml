@model List<Profile>

@{
    ViewBag.Title = "Profiles";
}

@Html.ActionLink("Trainers in Eugene", "ProfilesByCity", "Profiles",
    new { city = "Eugene" })<br />
@Html.ActionLink("Trainers in Salem", "ProfilesByCity", "Profiles",
    new { city = "Salem" })<br />
@Html.ActionLink("Trainers in Portland", "ProfilesByCity", "Profiles",
    new { city = "Portland" })<br />
@Html.ActionLink("Trainers in Other Cities", "ProfilesByCity", "Profiles",
    new { city = "Other" })<br />
<h2>List of trainers in @ViewBag.City </h2>
<table class="table">
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfileUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                
                <td>
                    <img src=@item.imagePath height="30" width ="30"/>
                </td>
               
                <td>
                 
                    <a asp-action="Details" asp-route-id="@item.ProfileID">Details</a> |
              
                </td>
            </tr>
        }
    </tbody>
</table>