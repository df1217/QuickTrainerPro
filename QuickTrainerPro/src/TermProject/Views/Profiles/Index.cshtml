@model List<Profile>

@{
    ViewBag.Title = "Profiles";
}

<a asp-controller="Profile" asp-action="ProfileByCity"
   asp-route-city="Eugene">Trainers in Eugene</a>

<h2>List of trainers in @ViewBag.City </h2>
<table class="table">
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfileUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                
                <td>
                    <img src=@item.imagePath height="30" width"30"/>
                </td>
               
                <td>
                 
                    <a asp-action="Details" asp-route-id="@item.ProfileID">Details</a> |
              
                </td>
            </tr>
        }
    </tbody>
</table>