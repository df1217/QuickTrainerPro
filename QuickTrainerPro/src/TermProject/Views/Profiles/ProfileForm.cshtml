@model Profile

@{
    ViewBag.Title = "Add Profile";
}
<h1>Add Your Message</h1>


<form asp-controller="Profiles" asp-action="ProfileForm" method="post" >



    <div class="form-group">

        

        <label asp-for="City"></label>
        <select asp-for="City" class="form-control" col-sm>
            <option value="Eugene">Eugene</option>
            <option value="Salem">Salem</option>
            <option value="Portland">Portland</option>
            <option value="Other">Other</option>
            
        </select>
        
        <br />
        <label asp-for="Descripiton"></label>
        <textarea asp-for="Descripiton" class="form-control" rows="5"></textarea>
        <br />
        <button type="submit" class="btn btn-default">Post</button>
    </div>

</form>